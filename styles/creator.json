{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"title": "Creator",
	"settings": {
		"color": {
			"palette": [
				{
					"name": "Primary",
					"slug": "primary",
					"color": "#5A20FF"
				},
				{
					"name": "Main",
					"slug": "main",
					"color": "#1E0E2E"
				},
				{
					"name": "Secondary",
					"slug": "secondary",
					"color": "#695280"
				},
				{
					"name": "Main Accent",
					"slug": "main-accent",
					"color": "#E6DBF2"
				},
				{
					"name": "Primary Accent",
					"slug": "primary-accent",
					"color": "#E2D8FF"
				},
				{
					"name": "Tertiary",
					"slug": "tertiary",
					"color": "#F8F3FC"
				},
				{
					"name": "Border Light",
					"slug": "border-light",
					"color": "#E6D7F1"
				},
				{
					"name": "Border Dark",
					"slug": "border-dark",
					"color": "#473856"
				},
				{
					"name": "Base",
					"slug": "base",
					"color": "#fff"
				}
			]
		},
		"typography": {
			"fontSizes": [
				{
					"fluid": {
						"min": ".8rem",
						"max": ".9rem"
					},
					"size": ".9rem",
					"slug": "x-small",
					"name": "Extra Small"
				},
				{
					"fluid": {
						"min": ".9rem",
						"max": "1rem"
					},
					"size": "1rem",
					"slug": "small",
					"name": "Small"
				},
				{
					"fluid": {
						"min": "1rem",
						"max": "1.13rem"
					},
					"size": "1.13rem",
					"slug": "base",
					"name": "Base"
				},
				{
				  "fluid": {
					"min": "1.26rem",
					"max": "1.51rem"
				  },
				  "size": "1.51rem",
				  "slug": "medium",
				  "name": "Medium"
				},
				{
				  "fluid": {
					"min": "1.76rem",
					"max": "2.27rem"
				  },
				  "size": "2.27rem",
				  "slug": "large",
				  "name": "Large"
				},
				{
				  "fluid": {
					"min": "2.46rem",
					"max": "3.4rem"
				  },
				  "size": "3.4rem",
				  "slug": "x-large",
				  "name": "Extra Large"
				},
				{
				  "fluid": {
					"min": "3.44rem",
					"max": "5.1rem"
				  },
				  "size": "5.1rem",
				  "slug": "xx-large",
				  "name": "Extra Extra Large"
				}
			]
		},
		"spacing": {
			"spacingSizes": [
				{
					"name": "Small",
					"size": "clamp(.5rem, 2.5vw, 1rem)",
					"slug": "small"
				},
				{
					"name": "Medium",
					"size": "clamp(1.5rem, 4vw, 2rem)",
					"slug": "medium"
				},
				{
					"name": "Large",
					"size": "clamp(2rem, 5vw, 3rem)",
					"slug": "large"
				},
				{
					"name": "Extra Large",
					"size": "clamp(3rem, 7vw, 5rem)",
					"slug": "x-large"
				},
				{
					"name": "2xl",
					"size": "clamp(4rem, 9vw, 7rem)",
					"slug": "xx-large"
				},
				{
					"name": "3xl",
					"size": "clamp(5rem, 12vw, 9rem)",
					"slug": "xxx-large"
				},
				{
					"name": "4xl",
					"size": "clamp(6rem, 14vw, 13rem)",
					"slug": "xxxx-large"
				}
			],
			"units": [
				"px",
				"em",
				"rem",
				"vh",
				"vw",
				"%"
			]
		}
	},
	"styles": {
		"blocks": {
			"core/post-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--condensed)",
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"core/details": {
				"css": ".wp-block-details summary { font-weight: var(--wp--custom--font-weight--semi-bold) }"
			}
		},
		"elements": {
			"button": {
				"spacing": {
					"padding": {
						"top": ".6em",
						"right": "1.4em",
						"bottom": ".6em",
						"left": "1.4em"
					}
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--base)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-small)"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--condensed)",
					"fontWeight": "var(--wp--custom--font-weight--bold)",
					"lineHeight": "var(--wp--custom--line-height--snug)",
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			}
		},
		"spacing": {
			"blockGap": "var(--wp--preset--spacing--medium)",
			"padding": {
				"top": "0",
				"right": "var(--wp--preset--spacing--medium)",
				"bottom": "0",
				"left": "var(--wp--preset--spacing--medium)"
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--primary)",
			"fontSize": "var(--wp--preset--font-size--base)",
			"fontWeight": "var(--wp--custom--font-weight--regular)",
			"lineHeight": "var(--wp--custom--line-height--body)"
		}
	}
}
